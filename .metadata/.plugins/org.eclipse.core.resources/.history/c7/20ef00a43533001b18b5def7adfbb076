package variaveis;

import javax.swing.JOptionPane;

public class Media {

	public static void main(String[] args) {
		/*
		 * Crie uma aplicação que receba:
		 * nome da disciplina
		 * nota do 1º semestre
		 * nota do 2º semestre
		 * calcule e exiba a média aritmética entre as duas notas
		 */
		
		String disc = JOptionPane.showInputDialog("Digite o nome da disciplina: ");
		double nota1 = Double.parseDouble(JOptionPane.showInputDialog("Digite a nota do 1º semestre: "));
		double nota2 = Double.parseDouble(JOptionPane.showInputDialog("Digite a nota do 2º semestre: "));
		double media = (nota1 + nota2) / 2;
		
		System.out.println("Disciplina: " + disc + "\n Média do jumentinho: " + media);
	

	}

}
