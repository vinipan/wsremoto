package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		
		int jogador1 = Integer.parseInt(JOptionPane.showInputDialog("Jogador1 digite seu numero"));
		int palpite = Integer.parseInt(JOptionPane.showInputDialog("Jogador1 digite seu numero"));
		byte i = 1;

		while (palpite != jogador1)
		{
			if (palpite < jogador1)
			{
				JOptionPane.showInternalMessageDialog(null, "ERROU! \nO NÚMERO A SER A DIVINHADO É MENOR" );
			}
			else {
				JOptionPane.showInternalMessageDialog(null, "ERROU! \nO NÚMERO A SER A DIVINHADO É MAIOR" );
			}			
			palpite = Integer.parseInt(JOptionPane.showInputDialog("TENTE DE NOVO"));
			i++;
		}

		JOptionPane.showInternalMessageDialog(null, "ACERTOU EM "+i+"TENTATIVAS" );












	}
}